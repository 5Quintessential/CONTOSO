<libControls:BindableUserControl
    xmlns:libControls="using:Microsoft.DPE.ReferenceApps.Food.Lib.Controls"
    x:Class="Microsoft.DPE.ReferenceApps.Food.Client.Controls.ClusteredPinControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.DPE.ReferenceApps.Food.Client.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Border BorderThickness="0" Padding="15" Margin="0" Width="63" Height="59">
        <Border.Background>
            <ImageBrush ImageSource="/Assets/map-pincluster-icon.png"/>
        </Border.Background>
        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Foreground="Black"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Restaurants.Count}"/>
    </Border>
</libControls:BindableUserControl>
