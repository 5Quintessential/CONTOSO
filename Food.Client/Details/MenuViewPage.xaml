        <Grid.Background>
            <ImageBrush ImageSource="/Assets/bg_01.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid x:Name="TopPanelFull">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock Text="{Binding Restaurant.Name}" Style="{StaticResource PageHeaderStyle}" TextWrapping="Wrap" Grid.Column="1" />
        </Grid>

