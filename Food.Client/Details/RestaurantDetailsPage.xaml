<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Microsoft.DPE.ReferenceApps.Food.Client.Details.RestaurantDetailsPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    IsTabStop="false"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.DPE.ReferenceApps.Food.Client.Details"
    xmlns:common="using:Microsoft.DPE.ReferenceApps.Food.Client.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Microsoft.DPE.ReferenceApps.Food.Client.ViewModels"
    xmlns:converters="using:Microsoft.DPE.ReferenceApps.Food.Lib.Converters"
    xmlns:controls="using:Microsoft.DPE.ReferenceApps.Food.Client.Controls"
    xmlns:Ads="using:Microsoft.Advertising.WinRT.UI"
    mc:Ignorable="d">

    <d:Page.DataContext>
        <models:RestaurantDetailsViewModel />
    </d:Page.DataContext>
    
    <Page.Resources>
        <Style x:Key="DetailPanelStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="SnappedDetailPanelStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="#B2F5F5F5" />
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Width" Value="280" />            
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid x:Name="RootGrid" Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/bg_01.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{Binding Restaurant.Name}" Style="{StaticResource PageHeaderStyle}"/>
        </Grid>

        <ScrollViewer x:Name="MainScroller" Grid.Row="1" Margin="0,0,0,0" Style="{StaticResource HorizontalScrollViewerStyle}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MainPanel" Orientation="Horizontal">

                <!-- Overview -->
                <StackPanel x:Name="OverviewPanel" Margin="120,0,80,0">                    
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock Text="OVERVIEW" Style="{StaticResource SectionHeaderStyle}" />
                            <StackPanel x:Name="OverviewContentPanel" Orientation="Horizontal" Style="{StaticResource DetailPanelStyle}" Margin="0">
                                <StackPanel x:Name="OverviewContentColumnOnePanel" Margin="0,10,0,0">
                                    <StackPanel x:Name="AggregateRatingPanel">
                                        <StackPanel x:Name="YelpRatingPanel" Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Left" Visibility="{Binding YelpRatingVisibility}">
                                            <controls:RatingsControl Width="100" Height="20" StarColor="{StaticResource AppGreenColor}" StarBrush="{StaticResource AppGreenBrush}" RatingValue="{Binding Restaurant.YelpRecord.avg_rating}" />
                                            <TextBlock Text=" - Yelp" Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <StackPanel x:Name="FactualRatingPanel" Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Left" Visibility="{Binding FactualRatingVisibility}">
                                            <controls:RatingsControl Width="100" Height="20" StarColor="{StaticResource AppGreenColor}" StarBrush="{StaticResource AppGreenBrush}" RatingValue="{Binding Restaurant.FactualRecord.rating}" />
                                            <TextBlock Text=" - Factual" Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Restaurant.Address}" Style="{StaticResource FieldValueStyle}" Margin="0,5,0,0"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Restaurant.City}" Style="{StaticResource FieldValueStyle}"/>
                                        <TextBlock Text=", " Style="{StaticResource FieldValueStyle}"/>
                                        <TextBlock Text="{Binding Restaurant.State}" Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                        <TextBlock Text="{Binding Restaurant.Zip}" Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Restaurant.Phone, Converter={StaticResource PhoneNumberFormattingConverter}}" Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Neighborhoods: " Style="{StaticResource FieldHeaderStyle}"/>
                                        <TextBlock Text="{Binding Neighborhoods}" Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <Image x:Name="MapImage" Width="350" Height="350" Source="{Binding MapSnapshotSource}" Margin="0,12,0,0" HorizontalAlignment="Left" />
                                </StackPanel>
                                <StackPanel x:Name="OverviewContentColumnTwoPanel" Visibility="{Binding FactualDetailsVisibility}" Margin="20">
                                    <TextBlock Text="Hours:" Style="{StaticResource FieldHeaderStyle}"/>
                                    <ItemsControl ItemsSource="{Binding Restaurant.FactualRecord.HoursOfOperation}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Key}" Style="{StaticResource FieldSubHeaderStyle}" Margin="0,8,0,8"/>
                                                    <ItemsControl ItemsSource="{Binding Value}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                    <TextBlock Text="{Binding OpenTime, Converter={StaticResource DateTimeConverter}, ConverterParameter='t'}" Style="{StaticResource FieldValueStyle}"/>
                                                                    <TextBlock Text=" - " Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                                                    <TextBlock Text="{Binding CloseTime, Converter={StaticResource DateTimeConverter}, ConverterParameter='t'}" Style="{StaticResource FieldValueStyle}"  Margin="5,0,0,0"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <StackPanel x:Name="FactualDetailsPanel" Orientation="Vertical">
                                        <StackPanel x:Name="FactualDetailsColumnOnePanel">
                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Price Range:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.price, Converter={StaticResource PriceRangeToDollarsConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0" Foreground="{StaticResource AppGreenBrush}"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                                <TextBlock Text="Cuisine:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.cuisine}" Style="{StaticResource FieldValueStyle}" TextWrapping="Wrap" Margin="0,2,0,0" MaxWidth="220" HorizontalAlignment="Left" />
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Bar:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.alcohol_bar, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="BYOB:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.alcohol_byob, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Delivery:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.meal_deliver, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Takeout:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.meal_takeout, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Parking:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.ParkingAggregate}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>
                                    
                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Serves Breakfast:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.meal_breakfast, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Serves Lunch:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.meal_lunch, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Serves Dinner:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.meal_dinner, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Catering Available:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.meal_cater, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Reservations Accepted:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.reservations, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel x:Name="FactualDetailsColumnTwoPanel">
                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Attire:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.attire, Converter={StaticResource TitleCaseConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Attire Required:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.attire_required, Converter={StaticResource TitleCaseConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Wheelchair Accessible:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.accessible_wheelchair, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Good for Kids:" Style="{StaticResource FieldHeaderStyle}"/>
                                                <TextBlock Text="{Binding Restaurant.FactualRecord.kids_goodfor, Converter={StaticResource NullableBoolToStringConverter}}" Style="{StaticResource FieldValueStyle}" Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <!-- Ad -->
                        <Ads:AdControl
                            VerticalAlignment="Top"
                            Margin="0,0,0,0"
                            Width="160"
                            Height="600"
                            AdUnitId="10043135"
                            ApplicationId="d25517cb-12d4-4699-8bdc-52040c712cab" />
                    </StackPanel>
                </StackPanel>

                <!-- Reviews -->
                <StackPanel x:Name="ReviewsPanel"  Margin="0,0,80,0">
                    <TextBlock Text="REVIEWS" Style="{StaticResource SectionHeaderStyle}" />
                    <StackPanel x:Name="ReviewsContentPanel" Style="{StaticResource DetailPanelStyle}" Margin="0">
                        <ListView x:Name="ReviewsPanelListViewFull" ItemsSource="{Binding Restaurant.Reviews}" SelectionMode="None" IsItemClickEnabled="True" ItemClick="ReviewItemClick" Margin="0,10,0,0">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid Orientation="Vertical" HorizontalAlignment="Left" MaximumRowsOrColumns="6">
                                        <WrapGrid.ChildrenTransitions>
                                            <TransitionCollection>
                                                <EntranceThemeTransition IsStaggeringEnabled="True"/>
                                            </TransitionCollection>
                                        </WrapGrid.ChildrenTransitions>
                                    </WrapGrid>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0">
                                        <Image Source="{Binding YelpRecord.user_photo_url}" Width="50" Height="50" VerticalAlignment="Top"/>

                                        <StackPanel Margin="12,0,0,20" VerticalAlignment="Top">
                                            <StackPanel Orientation="Horizontal">
                                                <controls:RatingsControl Width="95" Height="18" StarColor="{StaticResource AppGreenColor}" StarBrush="{StaticResource AppGreenBrush}" RatingValue="{Binding Rating}" />
                                                <TextBlock Text="{Binding Date, Converter={StaticResource DateTimeConverter}, ConverterParameter='d'}" Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Comment, Converter={StaticResource ParagraphConverter}}" Style="{StaticResource FieldValueStyle}" Margin="0,2,0,0" Width="250"/>
                                        </StackPanel>
                                        <Image Source="/Assets/icons-website_03.png" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="2,0,0,0" Width="21" Height="20" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <ListView x:Name="ReviewsPanelListViewSnapped" ItemsSource="{Binding Restaurant.Reviews}" SelectionMode="None" IsItemClickEnabled="True" ItemClick="ReviewItemClick" Visibility="Collapsed">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Image Source="{Binding YelpRecord.user_photo_url}" Width="50" Height="50" VerticalAlignment="Top"/>

                                        <StackPanel Margin="8,0,0,0" VerticalAlignment="Top">
                                            <StackPanel Orientation="Horizontal">
                                                <Path Width="95" Height="18" Stretch="Uniform" StrokeThickness="1" StrokeLineJoin="Miter" Stroke="{StaticResource AppGreenBrush}" Data="F1 M 223.327,111.904L 187.427,90.6802L 151.986,112.662L 161.077,71.9602L 129.219,45.0464L 170.738,41.115L 186.49,2.49997L 203.059,40.7716L 244.652,43.82L 213.373,71.4046L 223.327,111.904 Z M 476.978,111.904L 441.078,90.6802L 405.637,112.662L 414.728,71.9602L 382.871,45.0465L 424.389,41.115L 440.141,2.50003L 456.71,40.7716L 498.303,43.82L 467.024,71.4046L 476.978,111.904 Z M 606.05,111.904L 570.15,90.6802L 534.709,112.662L 543.8,71.9602L 511.943,45.0465L 553.461,41.115L 569.213,2.50003L 585.782,40.7716L 627.375,43.82L 596.096,71.4046L 606.05,111.904 Z M 96.6075,111.904L 60.7075,90.6802L 25.2665,112.662L 34.3574,71.9602L 2.5,45.0465L 44.0185,41.115L 59.7706,2.50003L 76.3395,40.7716L 117.932,43.82L 86.6539,71.4046L 96.6075,111.904 Z M 350.259,111.904L 314.359,90.6802L 278.918,112.662L 288.009,71.9602L 256.151,45.0464L 297.67,41.115L 313.422,2.50003L 329.991,40.7716L 371.583,43.82L 340.305,71.4046L 350.259,111.904 Z ">
                                                    <Path.Fill>
                                                        <LinearGradientBrush StartPoint="-0.00400081,0.5" EndPoint="1.004,0.5">
                                                            <LinearGradientBrush.GradientStops>
                                                                <GradientStop Color="{StaticResource AppGreenColor}" Offset="{Binding Rating, Converter={StaticResource StarRatingConverter}}"/>
                                                                <GradientStop Color="White" Offset="{Binding Rating, Converter={StaticResource StarRatingConverter}}"/>
                                                            </LinearGradientBrush.GradientStops>
                                                        </LinearGradientBrush>
                                                    </Path.Fill>
                                                </Path>
                                                <TextBlock Text="{Binding Date, Converter={StaticResource DateTimeConverter}, ConverterParameter='d'}" Style="{StaticResource FieldValueStyle}" Margin="5,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Comment, Converter={StaticResource ParagraphConverter}}" Style="{StaticResource FieldValueStyle}" Margin="0,2,0,0" Width="200"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </StackPanel>

                <!-- Menu -->
                <StackPanel x:Name="MenuPreviewPanel"  Margin="0,0,80,0" Visibility="{Binding MenuVisibility}">
                    <Button Content="MENU" Style="{StaticResource SectionHeaderMoreStyle}" Click="ViewMenuButton_Click"/>
                    <StackPanel x:Name="MenuPreviewContentPanel" HorizontalAlignment="Left" Style="{StaticResource DetailPanelStyle}" Margin="0">
                        <ItemsControl x:Name="MenuGroups" ItemsSource="{Binding SelectedMenuGroups}" Margin="0,10,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Height="{Binding DataContext.MaxHeight, ElementName=pageRoot}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Left" Margin="0,0,20,12">
                                        <TextBlock Text="{Binding Name, Converter={StaticResource UpperCaseConverter}}" Style="{StaticResource SectionSubHeaderStyle}" Margin="0,8,8,8" HorizontalAlignment="Left" Foreground="{StaticResource AppPurpleBrush}"/>
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,0,8,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="200"/>
                                                            <ColumnDefinition Width="10"/>
                                                            <ColumnDefinition Width="100"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="2"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Text="{Binding Name, Converter={StaticResource UpperCaseConverter}}" Style="{StaticResource FieldHeaderStyle}" TextWrapping="Wrap" Foreground="Black" />
                                                        <TextBlock Text="{Binding Price}" Grid.Column="2" Style="{StaticResource FieldValueStyle}" HorizontalAlignment="Right" Foreground="{StaticResource AppGreenBrush}"/>
                                                        <TextBlock Text="{Binding Description}" Grid.Row="2" Grid.ColumnSpan="3" Style="{StaticResource FieldValueStyle}" TextWrapping="Wrap" TextTrimming="WordEllipsis" MaxHeight="50"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>

                <!-- Gallery -->
                <StackPanel x:Name="GalleryPanel" Margin="0,0,120,0" Visibility="{Binding ImageResults, Converter={StaticResource CollectionCountVisibilityConverter}}">
                    <Button Content="GALLERY" Style="{StaticResource SectionHeaderMoreStyle}" Click="ViewGalleryButton_Click"/>
                    <StackPanel x:Name="GalleryContentPanel" Style="{StaticResource DetailPanelStyle}" Margin="0">
                        <GridView x:Name="GalleryGridView" Margin="0,10,0,0" ItemsSource="{Binding ImageResults}" SelectionMode="None" VerticalAlignment="Top" HorizontalAlignment="Left" IsItemClickEnabled="True" ItemClick="GalleryItemClick">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3">
                                        <WrapGrid.ChildrenTransitions>
                                            <TransitionCollection>
                                                <EntranceThemeTransition IsStaggeringEnabled="True"/>
                                            </TransitionCollection>
                                        </WrapGrid.ChildrenTransitions>
                                    </WrapGrid>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Thumbnail.MediaUrl}" Width="190" Height="125" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                        <ListView x:Name="GalleryListView" Margin="20" ItemsSource="{Binding ImageResults}" Width="250" SelectionMode="None" VerticalAlignment="Top" HorizontalAlignment="Left" IsItemClickEnabled="True" ItemClick="GalleryItemClick" Visibility="Collapsed">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Thumbnail.MediaUrl}" Width="160" Height="106" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="JSONPanel" Orientation="Horizontal" Margin="50,0,50,0" Visibility="{Binding JSONPanelVisibility}">
                    <Button x:Name="CreateJSONBtn" Margin="10" Click="CreateJSONBtn_Click" Content="JSONify HubViewModel"/>
                    <StackPanel>
                        <TextBlock Text="Restaurants:" Margin="10"/>
                        <RichEditBox x:Name="JSONBoxRestaurants" Margin="10" Width="500" Height="500"  TextWrapping="Wrap" TextAlignment="Left"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="User Settings:" Margin="10"/>
                        <RichEditBox x:Name="JSONBoxUserSettings" Margin="10" Width="500" Height="500"  TextWrapping="Wrap" TextAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainScroller" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource VerticalScrollViewerStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainPanel" Storyboard.TargetProperty="Orientation">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Vertical"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainPanel" Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="10"/>
                        </ObjectAnimationUsingKeyFrames>

                        <!-- Overview -->
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewPanel" Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="0,10,0,0"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewContentPanel" Storyboard.TargetProperty="Orientation">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Vertical"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewContentPanel" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedDetailPanelStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewContentColumnOnePanel" Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="10"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewContentColumnTwoPanel" Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="10"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FactualDetailsPanel" Storyboard.TargetProperty="Orientation">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Vertical"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FactualDetailsColumnOnePanel" Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="0,10,0,0"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FactualDetailsColumnTwoPanel" Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="0,10,0,0"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MapImage" Storyboard.TargetProperty="Width">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="250"/>
                        </ObjectAnimationUsingKeyFrames>
